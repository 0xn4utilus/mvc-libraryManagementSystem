<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>overlord_library</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <style>
        .total_books {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            width: 90%;
        }
        
        .total_books>div {
            margin: 5%;
        }
    </style>
</head>
<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
        <img src="static/icon.png" width="50" height="50" class="d-inline-block " alt="">Overlord_Library
    </a>
    <div>
        <a href="" class="btn btn-outline-light" data-toggle="modal" data-target="#modalLoginForm">Login</a>
        <a href="" class="btn btn-outline-light" data-toggle="modal" data-target="#modalRegisterForm">Register</a>
    </div>
</nav>


<body>
    <center>
        <h1>Explore Books</h1>
        <div class="total_books">
            {%if total_books != Null%}
        
                {%for data in total_books%}
                <div class="card" style="width: 300px; ">
                    <img src=" {{data.book_cover_path}} " style="width:300px; height: 400px" class="card-img-top" alt="{{data.book_name}}">
                    <div class="card-body">
                        <center>
                            <h3 class="card-title" style="color: rgb(62, 134, 230);">
                                {{data.book_name}}
                            </h3>
                        </center>

                        <p class="card-text">ISBN:
                            {{data.isbn}}
                        </p>
                        <p class="card-text">Copies:
                            {{data.copies}}
                        </p>
                        {%if data.book_description != Null%}
                            <p class="card-text">Description:
                                {{data.book_description}}<br></p>
                        {%endif%}
                    </div>
                </div>
                {% endfor %}
            {% else %}
                        <center>
                            <h3>NO DATA FOUND</h3>
                        </center>
            {% endif %}
        </div>
    </center>
    <!-- Login  -->
    <div class="modal fade" id="modalLoginForm" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Login</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username"> </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <button type="submit" id="loginbutton" value="loginbutton" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Register  -->
    <div class="modal fade" id="modalRegisterForm" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Register</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-2">
                    <form action="/register" method="POST">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username"> </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="passwordC">Confirm Password</label>
                            <input type="password" class="form-control" id="passwordC" name="passwordC" placeholder="Confirm Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>





</body>

</html>